extends Control

#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

#-------------------------
# External
#-------------------------

onready var player = get_node("/root/gx/player/data")

#-------------------------
# Internal
#-------------------------

onready var health = get_node("health/content")
onready var stamina = get_node("stamina/content")
onready var armor = get_node("armor/content")


#----------------------------------------------------------------------------------------------------
# _ready
#----------------------------------------------------------------------------------------------------

func _ready():
	set_process(true)


#----------------------------------------------------------------------------------------------------
# _process
#----------------------------------------------------------------------------------------------------

func _process(delta):
	health.set_text(str(player.physical_health))
	stamina.set_text(str(player.physical_stamina))
	armor.set_text(str(player.equip_armor))


#----------------------------------------------------------------------------------------------------
# end
#----------------------------------------------------------------------------------------------------
