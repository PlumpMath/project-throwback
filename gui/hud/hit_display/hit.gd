extends Control

#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

onready var data = get_node("../data")
onready var damage = get_node("/root/gx/player/weapon").damage
onready var health = get_node("health")


#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

func _ready():
	set_process(true)


#----------------------------------------------------------------------------------------------------
#
#----------------------------------------------------------------------------------------------------

func _process(delta):
	get_node("damage").set_text(str(damage))
	health.set_value(data.physical_health)


