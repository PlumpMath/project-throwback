extends Area2D

#----------------------------------------------------------------------------------------------------
# global
#----------------------------------------------------------------------------------------------------

export var amount = 0

onready var player = get_node("/root/gx/player/data")
onready var hud = get_node("/root/gx/hud")

var interact = false


#----------------------------------------------------------------------------------------------------
# _ready
#----------------------------------------------------------------------------------------------------

func _ready():
	set_process(true)


#----------------------------------------------------------------------------------------------------
# _process
#----------------------------------------------------------------------------------------------------

func _process(delta):
	if (interact):
		if (Input.is_action_pressed("interact_a")):
			player.inventory_ammo += amount
			hud.content["message"] = "%s Ammo added to inventory" % amount
			self.queue_free()


#----------------------------------------------------------------------------------------------------
# _on_body
#----------------------------------------------------------------------------------------------------

#-------------------------
# enter
#-------------------------

func _on_ammo_body_enter( body ):
	interact = true
	get_node("/root/gx/hud").content["instruction"] = "Press SPACE BAR to Pickup %s Ammo" % amount


#-------------------------
# exit
#-------------------------

func _on_ammo_body_exit( body ):
	interact = false
	get_node("/root/gx/hud").content["instruction"] = ""


#----------------------------------------------------------------------------------------------------
# end
#----------------------------------------------------------------------------------------------------
